.container {
    padding: 30rpx 35rpx 50rpx 35rpx;
    /*上右下左*/
}

.type {
    display: flex;
    font-size: 30rpx;
}

.type .type-item {
    background-color: #eee;
    padding: 20rpx 100rpx;
    border: 1rpx solid #aaa;
    font-size: 40rpx; /* 增加字体大小 */
    /* margin-right: 100rpx; */
    margin-left: 40rpx;
    border-radius: 10rpx;
}

.type .type-select {
    background-color: #a32034;
    color: #fff;
}

.classify {
    margin-top: 30rpx;
    display: flex;
    width: 100%;
    align-items: center;
}

.classify .label {
    margin-right: 20rpx;
    white-space: nowrap;
    font-size: 28rpx;
}

.classify .picker {
    width: 100%;
}

.picker .empty,
.select {
    display: flex;
    align-items: center;
    border: 2rpx solid #aaa;
    width: 100%;
    padding: 20rpx 20rpx;
    box-sizing: border-box;
    border-radius: 15rpx;
    justify-content: space-between;
    font-size: 26rpx;
}

.picker .empty .select-icon {
    width: 35rpx;
    height: 35rpx;
}

.picker .select .delete-icon {
    width: 35rpx;
    height: 35rpx;
}

.input-list {
    padding: 30rpx 15rpx;
    padding-top: 80rpx;
    border-bottom: 5rpx solid #f3f3f3;
    font-size: 26rpx;
    padding-top: 40rpx; /* 这是输入框顶部的内边距 */
}

.input-list .input-item {
    margin-bottom: 40rpx;
    border: 1px solid #aaa; /* 添加1像素的黑色实线边框 */
    padding: 10rpx 70rpx;
    border-radius: 10rpx;
}

.desc {
    padding: 30rpx 15rpx;
    border-bottom: 5rpx solid #f3f3f3;
    position: relative;
    border: 1px solid #aaa; /* 添加1像素的黑色实线边框 */
    border-radius: 10rpx;
}

.desc .delete-icon {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 30rpx;
    right: 0;
}

.upload {
    padding-top: 20rpx;
    border-bottom: 5rpx solid #f3f3f3;
}
.upload .upload-title{
    font-size: 28rpx; 
}
.upload .upload-top {
    display: flex;
    justify-content: space-between;
}

.upload .upload-list {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.upload .upload-list .default {
    width: 33%;
    height: 250rpx;
}

.image-list {
    width: 33%;
    height: 250rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.image-list .common {
    width: 90%;
    height: 90%;
}

.image-list .delete-icon {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: 15rpx;
    right: 15rpx;
}

.bottom {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 50rpx;
}

.bottom .publish-btn {
    margin: 0 !important;
    background-color: #a32034;
    color: #fff;
    border-radius: 30rpx;
    width: 300rpx;
}